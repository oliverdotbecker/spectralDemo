{
  "name": "spectraldemo",
  "version": "1.0.0",
  "description": "a processing application for a ams AS726x sensor",
  "main": "index.js",
  "author": "Oliver Becker",
  "license": "ISC",
  "dependencies": {
    "@electron/remote": "^2.0.8",
    "artnet": "1.4.0",
    "electron": "^19.0.10",
    "serialport": "^10.4.0"
  },
  "scripts": {
    "start": "electron index.js",
    "dist": "electron-builder"
  },
  "devDependencies": {
    "electron-builder": "19.49.2",
    "electron-packager": "8.7.2",
    "electron-rebuild": "1.6.1"
  },
  "build": {
    "appId": "ob.spectraldemo",
    "productName": "Spectral Demo",
    "asar": true,
    "copyright": "Copyright Â© 2019 ${author}",
    "directories": {
      "output": "build"
    },
    "files": [
      "**/*",
      "!.vscode"
    ],
    "win": {
      "icon": "cie.ico",
      "publisherName": "Oliver Becker"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowElevation": false,
      "allowToChangeInstallationDirectory": true,
      "menuCategory": true,
      "uninstallDisplayName": "Spectral Demo",
      "installerIcon": "cie.ico"
    }
  }
}
